# add java (.java, and .class), and antlr (.g, and .tokens) extensions
# to the list of known file extentions
.SUFFIXES: .java .class .g

# generic 
JC = javac
JVM = java
JAR = jar
CLASSPATH = .
JFLAGS = -classpath $(CLASSPATH)

# compile a .java file into one or more .class files
.java.class:
	$(JC) $(JFLAGS) $<


JAVA_SOURCES = BinaryTreeGenerator.java \
CProcessor.java \
CStructure.java \
CStructures.java \
DoubleLinkedListGenerator.java \
ElementaryFieldsOnlyGenerator.java \
GeneralFunctions.java \
MathObjUpleGenerate.java \
ParametrizedPatterns.java \
SingleLinkedListGenerator.java \
StructMetaInfo.java

CLASSES = $(JAVA_SOURCES:.java=.class)
VIEWER_JAR = PP.jar


# targets
# default target is all
all: build

# build target
build: $(VIEWER_JAR)

# build a jar
$(VIEWER_JAR): $(CLASSES)
	$(JAR) -cf $@ *.class

# run target (depends on build)
run: build
	$(JVM) $(JFLAGS) ParametrizedPatterns $(ARG)

# clean target removes the .class files and the files generated by antlr
clean:
	rm -rf $(VIEWER_JAR) *.class

