in ../../match-imp

mod LIST-APPEND-LIST is inc IMP + MEM-LIST .
  ops x y i p : -> PVar .
  op y0 : -> FreeInt .
  ops ?x ?i ?p ?v : -> ?Int .
  
  op pListAppendList : -> K .
  eq pListAppendList = (
    assume <config> <env> x |-> ?x ;; y |-> y0 ;; i |-> ?i ;; p |-> ?p </env>
           <heap> list(?x) ** list(y0) </heap> <form> TrueFormula </form> </config> ;
    if (x == 0) { x = y ;}
    else
    {
        p = x ;
        i = *(p + 1) ;
        invariant <config> <env> x |-> ?x ;; y |-> y0 ;; i |-> ?i ;; p |-> ?p </env>
                  <heap> lseg(?x,?p) ** ?p |-> ?v : node ** (?p +Int 1) |-> ?i : next ** list(?i) ** list(y0) </heap> <form> TrueFormula </form> </config> ;
        while (i != 0)
        {
            p = i ;
            i = *(i + 1) ;
        }
        *(p + 1) = y ;
        ***(assert <config> <env> x |-> ?x ;; y |-> y0 ;; i |-> ?i ;; p |-> ?p </env>
               <heap> lseg(?x,?p)(?A') ** ?p |-> ?v : node ** (?p +Int 1) |-> y0 : next ** list(y0)(B) </heap> 
               <form> ?A' :: ?v === A </form> </config> ; )***
    }
    assert <config> <env> x |-> ?x ;; y |-> y0 ;; i |-> ?i ;; p |-> ?p </env>
           <heap> list(?x) </heap> <form> TrueFormula </form> </config> ;
  ) .
endm

rew [| pListAppendList |] .